local ret=1
_arguments -s -S \
  '-c[cache file (default /etc/blkid.tab, /dev/null = none)]:file:_files' \
  "-d[don't encode non-printing characters]" \
  '-h[print this usage message and exit]' \
  '-g[garbage collect the blkid cache]' \
  '-o[output format; can be one of]:format:(value device list udev export full)' \
  '-k[list all known filesystems/RAIDs and exit]' \
  '-s[show specified tag(s) (default show all tags)]:tag' \
  '-t[find device with a specific token (NAME=value pair)]:token' \
  '-l[look up only first device with token specified by -t]' \
  '-L[convert LABEL to device name]:label' \
  '-U[convert UUID to device name]:uuid' \
  '-v[print version and exit]' \
  '-w[write cache to different file (/dev/null = no write)]:file:_files' \
  '-p[low-level superblocks probing (bypass cache)]' \
  '-i[gather information about I/O limits]' \
  '-S[overwrite device size]:size' \
  '-O[probe at the given offset]:offset' \
  '-u[filter by "usage" (e.g. -u filesystem,raid)]:list:_wakeup_capable_devices' \
  '-n[filter by filesystem type (e.g. -n vfat,ext3)]:list:_file_systems' \
  '*:dev:_files' && ret=0

return ret
