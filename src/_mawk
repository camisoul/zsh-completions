local ret=1

_arguments -S \
  '(- : *)-W[specific options]: :->options' \
  '-F[sets the field separator, FS, to value]:value' \
  '-f[Program text is read from file instead of from the command line]:_file' \
  '*-v[Assign the value val to the variable var, before execution of the program begins]: :->assign' \
  '(-)*:file:_files' && ret=0

if [[ ${state} = options ]]; then
  _values 'options' \
    'version[mawk writes its version and copyright]' \
    'dump[writes an assembler like listing of the internal representation of the program]' \
    'interactive[sets unbufferd writes to stdout and line buffered reads from stdin]' \
    'exec[Program text is read from file and this is the last option]:file' \
    'sprintf[adjusts the size of mawks internal sprintf buffer to num bytes]:num' \
    'posix_space[forces mawk not to consider \n to be space]' && ret=0
elif [[ ${state} = assign ]]; then
  compset -P '*='
  compset -S '=*'
  _message -e value 'var=val' && ret=0
fi

return ret
