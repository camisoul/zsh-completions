local ret=1
_arguments -s -S \
  '-c[Output is formatted for a display columns wide]:columns' \
  '-s[Specify a set of characters to be used to delimit columns for the -t option]:sep' \
  '-t[Determine the number of columns the input contains and create a table]' \
  '-x[Fill columns before filling rows]' \
  '-n[Do not merge multiple adjacent delimiters into a single delimiter]' \
  '-e[Do not ignore empty lines.]' \
  '*:file:_files' && ret=0

return ret
