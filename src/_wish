local ret=1
_arguments -S \
  '-encoding[Specifies the encoding of the text stored in fileName]:name' \
  '-colormap[Specifies the new private colormap for the screen]:new' \
  '-display[Display on which to display window]:display' \
  '-geometry[Initial geometry to use for window]:geometry' \
  '-name[Use name as the title to be displayed in the window]:name' \
  '-sync[Execute all X server commands synchronously]' \
  '-use[Window whose identifier is id]:id' \
  '-visual[Specifies the visual to use for the window]:visual' \
  '*:file:_files' && ret=0

return ret
